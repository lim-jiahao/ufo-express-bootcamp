<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>ðŸ›¸ UFO Sightings ðŸ‘½</title>
  </head>
  <body class="text-center bg-dark text-light">
    <%- include('nav', { page: '/' }) %>
    <div class="dropdown" style="margin-top: 70px">
      <button
        class="btn btn-secondary dropdown-toggle"
        type="button"
        id="dropdownMenuButton1"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        Select shape
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <a class="dropdown-item" href="/">All</a>
        <% shapes.forEach((shape) => { %>
        <a class="dropdown-item" href="?shape=<%= shape %>"><%= shape %></a>
        <% }) %>
      </div>
    </div>
    <div class="px-md-5">
      <table class="table table-dark table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Sighting</th>
            <th scope="col">Date</th>
            <th scope="col">City</th>
            <th scope="col">Shape</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% sightings.forEach((sighting) => { %>
          <tr>
            <th scope="row">
              <a href="/sighting/<%= sighting.index %>"
                >Sighting <%= sighting.index %></a
              >
            </th>
            <td><%= new Date(sighting.date_time).toDateString() %></td>
            <td><%= sighting.city %></td>
            <td><%= sighting.shape %></td>
            <td>
              <form action="/sighting/<%= sighting.index %>/edit" class="me-2">
                <input
                  type="submit"
                  value="Edit"
                  class="btn btn-warning btn-sm text-light"
                />
              </form>
            </td>
            <td
              data-bs-toggle="tooltip"
              title="Deleting is permanent. Please make sure you are deleting the right sighting."
            >
              <form
                action="/sighting/<%= sighting.index %>/delete?_method=DELETE"
                method="POST"
              >
                <input
                  type="submit"
                  value="Delete"
                  class="btn btn-danger btn-sm text-light"
                />
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
