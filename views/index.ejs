<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>ðŸ›¸ UFO Sightings ðŸ‘½</title>
  </head>
  <body class="text-center bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          >ðŸ›¸ <strong>UFO SIGHTINGS</strong> ðŸ‘½</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active fw-bold" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sighting">New Sighting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Shapes</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="px-md-5" style="margin-top: 70px">
      <table class="table table-dark table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Sighting</th>
            <th scope="col">Date</th>
            <th scope="col">City</th>
            <th scope="col">Shape</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% sightings.forEach((sighting, index) => { %>
            <th scope="row">
              <a href="/sighting/<%= index %>">Sighting <%= index %></a>
            </th>
            <td><%= new Date(sighting.date_time).toDateString() %></td>
            <td><%= sighting.city %></td>
            <td><%= sighting.shape %></td>
            <td>
              <form action="/sighting/<%= index %>/edit" class="me-2">
                <input
                  type="submit"
                  value="Edit"
                  class="btn btn-warning btn-sm text-light"
                />
              </form>
            </td>
            <td data-bs-toggle="tooltip" title="Deleting is permanent. Please make sure you are deleting the right sighting.">
              <form
                action="/sighting/<%= index %>/delete?_method=DELETE"
                method="POST"
              >
                <input
                  type="submit"
                  value="Delete"
                  class="btn btn-danger btn-sm text-light"
                />
              </form>
            </td>
            </tr>
            <% }); %>
          </tr>
        </tbody>
      </table>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
