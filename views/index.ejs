<html>
  <head>
    <!-- AFTER HTML loads in browser, browser will request for CSS. -->
    <!-- <link rel="stylesheet" href="styles.css"> -->
  </head>
  <body>
    <% sightings.forEach((sighting, index) => { %>
    <p><a href="/sighting/<%= index %>">Sighting <%= index %></a></p>
    <form action="/sighting/<%= index %>/edit">
      <input type="submit" value="Edit" />
    </form>
    <form action="/sighting/<%= index %>/delete?_method=DELETE" method="POST">
      <input type="submit" value="Delete" />
    </form>
    <% }); %>
    <hr />
    <p><a href="/sighting">New Sighting</a></p>
  </body>
</html>
