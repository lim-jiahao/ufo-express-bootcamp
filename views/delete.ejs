  >
    <%- include('common/nav') %>
    <div class="text-center" style="margin-top: 70px">
      <h1>Sighting deleted!</h1>
      <p>All sightings below this sighting will be bumped up.</p>
      <p id="text">Redirecting to homepage in 3 seconds...</p>
    </div>

    <script>
      let counter = 0;
      const timer = setInterval(() => {
        counter += 1;
        document.getElementById(
          "text"
        ).innerText = `Redirecting to homepage in ${3 - counter} seconds...`;

        if (counter === 3) {
          clearInterval(timer);
          window.location = "/";
        }
      }, 1000);
    </script>
