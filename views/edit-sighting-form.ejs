<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>ðŸ›¸ UFO Sightings ðŸ‘½</title>
  </head>
  <body
    class="
      container-fluid
      d-flex
      flex-column
      align-items-center
      bg-dark
      text-light
    "
  >
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          >ðŸ›¸ <strong>UFO SIGHTINGS</strong> ðŸ‘½</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sighting">New Sighting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Shapes</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="card bg-secondary mb-3" style="margin-top: 70px">
      <h6 class="card-header">Edit Sighting</h6>
      <div class="card-body">
        <form
          class="needs-validation"
          action="/sighting/<%= locals.index %>/edit?_method=PUT"
          method="POST"
          novalidate
        >
          <div class="mb-1">
            <label for="summary" class="form-label">Summary:</label><br />
            <input
              type="text"
              class="form-control"
              name="summary"
              value="<%= locals.summary %>"
              required
            />
            <div class="invalid-feedback fw-bold" style="color: #ff0000">
              Please input a summary of the sighting.
            </div>
          </div>
          <div class="mb-1">
            <label for="date_time" class="form-label"
              >Date / Time: (please enter in UTC +8 hrs)</label
            ><br />
            <input
              type="datetime-local"
              name="date_time"
              value="<%= locals.date_time %>"
              max="<%= locals.date_time %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback fw-bold" style="color: #ff0000">
              Please input when the sighting happened.
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-6">
              <label for="city" class="form-label">City:</label><br />
              <input
                type="text"
                class="form-control"
                name="city"
                value="<%= locals.city %>"
                required
              />
              <div class="invalid-feedback fw-bold" style="color: #ff0000">
                Please input the city at which the sighting occurred.
              </div>
            </div>
            <div class="col-6">
              <label for="state" class="form-label">State:</label><br />
              <input
                type="text"
                class="form-control"
                name="state"
                value="<%= locals.state %>"
                required
              />
              <div class="invalid-feedback fw-bold" style="color: #ff0000">
                Please input the state at which the sighting occurred.
              </div>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col-6">
              <label for="shape" class="form-label">Shape:</label><br />
              <input
                type="text"
                class="form-control"
                name="shape"
                value="<%= locals.shape %>"
                required
              />
              <div class="invalid-feedback fw-bold" style="color: #ff0000">
                Plase input the shape of the UFO.
              </div>
            </div>
            <div class="col-6">
              <label for="duration" class="form-label">Duration:</label><br />
              <input
                type="text"
                class="form-control"
                name="duration"
                value="<%= locals.duration %>"
                required
              />
              <div class="invalid-feedback fw-bold" style="color: #ff0000">
                Please input how long the sighting lasted for.
              </div>
            </div>
          </div>
          <div class="mb-1">
            <label for="description" class="form-label">Description:</label
            ><br />
            <textarea
              name="description"
              class="form-control"
              rows="4"
              cols="75"
              required
            >
<%= locals.description %></textarea
            >
            <div class="invalid-feedback fw-bold" style="color: #ff0000">
              Please input a detailed description of the sighting.
            </div>
          </div>
          <input type="submit" value="Submit" />
        </form>
      </div>
    </div>
    <script>
      (function () {
        "use strict";

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll(".needs-validation");

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
