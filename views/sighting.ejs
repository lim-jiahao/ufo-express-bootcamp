<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>ðŸ›¸ UFO Sightings ðŸ‘½</title>
  </head>
  <body
    class="container d-flex flex-column align-items-center bg-dark text-light"
  >
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          >ðŸ›¸ <strong>UFO SIGHTINGS</strong> ðŸ‘½</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sighting">New Sighting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Shapes</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="card w-100 mb-4 bg-secondary" style="margin-top: 70px">
      <h5 class="card-header">Information</h5>
      <div class="card-body">
        <p class="card-text">
          <strong>Date / Time:</strong> <%= sighting.date_time %>
        </p>
        <p class="card-text">
          <strong>Summary:</strong> <%= sighting.summary %>
        </p>
        <p class="card-text"><strong>City:</strong> <%= sighting.city %></p>
        <p class="card-text"><strong>State:</strong> <%= sighting.state %></p>
        <p class="card-text"><strong>Shape:</strong> <%= sighting.shape %></p>
        <p class="card-text">
          <strong>Duration:</strong> <%= sighting.duration %>
        </p>
        <p class="card-text">
          <strong>Created:</strong> <%= sighting.created %>
        </p>
      </div>
    </div>
    <div class="card w-100 mb-4 bg-secondary">
      <h5 class="card-header">Description</h5>
      <div class="card-body">
        <p class="card-text"><%= sighting.description %></p>
      </div>
    </div>
    <div class="d-flex">
      <form action="/sighting/<%= index %>/edit" class="me-2">
        <input type="submit" value="Edit" class="btn btn-warning text-light" />
      </form>
      <form action="/sighting/<%= index %>/delete?_method=DELETE" method="POST">
        <input
          type="submit"
          value="Delete"
          class="btn btn-danger text-light"
          data-bs-toggle="tooltip"
          title="Deleting is permanent. Please make sure you are deleting the right sighting."
        />
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
